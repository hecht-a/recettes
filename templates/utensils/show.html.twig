{% extends 'base.html.twig' %}

{% block title "Allerg√®nes : " ~ utensil.name %}

{% block body %}
    <div class="container glossary-show">
        <h1 class="glossary-title">{{ utensil.name }}</h1>
        <div class="glossary-image">
            <img src="{{ vich_uploader_asset(utensil) }}" alt="{{ utensil.name }}">
        </div>
        <div class="glossary-recipes">
            <p class="muted">
                Recettes: {% if utensil.recipes | length > 0 %}
                    {{ utensil.recipes
                    | map(recipe => "<a href='" ~ path('recipes_show', {slug: recipe.slug, id: recipe.id}) ~"'>"~ recipe.name ~"</a>")
                    | join(', ')
                    | raw }}

                {% else %}
                    pas de recettes contenant cet ustensile
                {% endif %}
            </p>
        </div>
        <div class="glossary-description">
            {{ utensil.description }}
        </div>
    </div>
{% endblock %}
